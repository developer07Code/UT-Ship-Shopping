<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_4dip">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4dip">

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="@dimen/_30dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5dip"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_menu_24" />
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/_70dip"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5dip"
        android:layout_toRightOf="@+id/ivMenu"
        android:src="@drawable/app_logo" />

    <TextView
        android:id="@+id/tvTransHis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_toRightOf="@+id/ivMenu"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.1"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14sp" />

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="@dimen/_4dip"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/ivWishlish"
        android:src="@drawable/ic_search_black_24dp"
        android:tint="@color/black"/>



    <ImageView
        android:id="@+id/ivWishlish"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="@dimen/_4dip"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/ivCart"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:tint="@color/black"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="@dimen/_4dip"
        android:src="@drawable/ic_outline_shopping_cart_24" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="@dimen/_20dip"
        android:layout_height="@dimen/_20dip"
        android:background="@drawable/cirle_shape"
        android:text="0"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_2dip"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:backgroundTint="@color/colorPrimary"/>
</RelativeLayout>

</LinearLayout>
</LinearLayout>