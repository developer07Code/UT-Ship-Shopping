<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/txt_Main"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/cirle_shape"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:text=""
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal">
<ImageView
    android:id="@+id/ivEye"
    android:layout_width="@dimen/_24dip"
    android:layout_height="@dimen/_24dip"
    android:layout_alignParentEnd="true"
    android:src="@drawable/ic_eye_off_line"/>
                <TextView
                    android:id="@+id/ivStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="fghfgh"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="UPI ID :"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvOrderIdValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    android:fontFamily="@font/lato_regular"
                    android:layout_toRightOf="@+id/tvOrderId"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvDatev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:padding="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_below="@+id/tvOrderId"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/lato_regular"
                    android:padding="2dp"
                    android:layout_toRightOf="@+id/tvDatev"
                    android:layout_below="@+id/tvOrderId"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status :"
                    android:padding="2dp"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginStart="2dp"
                    android:layout_below="@+id/tvDatev"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvStatusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="2dp"
                    android:fontFamily="@font/lato_regular"
                    android:layout_toRightOf="@+id/tvStatus"
                    android:layout_below="@+id/tvDate"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvNarrationn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="TransactionID :"
                    android:layout_below="@+id/tvStatus"
                    android:textSize="12sp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvNarration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="2dp"
                    android:fontFamily="@font/lato_regular"
                    android:layout_below="@+id/tvStatusValue"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tvNarrationn"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tvNarration"
                    android:layout_marginTop="5dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_regular"
                    android:background="@drawable/btn_round_shape"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                  android:visibility="gone"
                    android:text="ScreenShort :"
                    android:layout_below="@+id/tvAmount"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/black" />
                <ImageView
                    android:id="@+id/ivScreenShort"
                    android:layout_width="@dimen/_300dp"
                    android:layout_height="@dimen/_100dip"
                    android:visibility="gone"
                    android:layout_below="@+id/tvScreen"
                    android:layout_centerHorizontal="true"
                   android:layout_marginTop="@dimen/_5dip"
                    android:src="@drawable/ic_baseline_remove_red_eye_24"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>