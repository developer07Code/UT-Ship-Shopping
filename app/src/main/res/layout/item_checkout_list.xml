<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_2dip"
    android:padding="@dimen/_6dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/_60dip"
        android:layout_height="@dimen/_60dip"
        android:layout_gravity="start"
        android:src="@drawable/sweet_img" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sweets"
        android:layout_toRightOf="@+id/ivImage"
        android:gravity="start"
        android:layout_marginStart="@dimen/_2dip"
        android:layout_marginTop="@dimen/_5dip"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_bold"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sweets"
        android:layout_toRightOf="@+id/ivImage"
        android:gravity="start"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_bold"
        android:layout_below="@+id/tvTitle"
        android:textSize="@dimen/_14sp"
        android:padding="2dp"
        android:textColor="@color/black"/>

<LinearLayout
    android:id="@+id/llCartSection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/tvTitle"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/cirle_shape"
        android:padding="@dimen/_8dip"
        android:backgroundTint="@color/light_grays"
        android:src="@drawable/ic_baseline_add_24"/>
<TextView
    android:id="@+id/tvValue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="fczxczxc"
    android:textSize="@dimen/_16sp"
    android:paddingHorizontal="@dimen/_5dip"
    android:textColor="@color/black"
    android:layout_marginStart="@dimen/_5dip"
    android:fontFamily="@font/lato_regular"/>

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/cirle_shape"
        android:layout_marginStart="@dimen/_5dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="@color/light_grays">

        <ImageView
            android:id="@+id/ivMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:src="@drawable/ic_baseline_minimize_24"/>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>