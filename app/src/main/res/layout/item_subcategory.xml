<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llCatgroy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_6dp"
    android:layout_gravity="center"
    android:background="@color/paymentsdk_color_yellow">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sweets"
        android:gravity="center"
        android:fontFamily="@font/lato_bold"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/black"/>
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSubToSubCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5dip"
        android:layout_marginTop="@dimen/_5dip"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:itemCount="6"
        app:spanCount="3"
        tools:listitem="@layout/item_subcat_list" />

</LinearLayout>
