<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvAddress"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10dp"
    android:layout_marginStart="@dimen/_5dip"
    android:layout_marginEnd="@dimen/_5dip"

    android:layout_marginTop="@dimen/_2dip"
    android:layout_marginBottom="@dimen/_2dip"
    app:cardPreventCornerOverlap="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_10dp">


        <TextView
            android:id="@+id/tvDeliveryAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="16dp"
            android:text="Delivery Address"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/ivChecked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivChecked"
            app:layout_constraintTop_toTopOf="@id/ivChecked" />

        <ImageView
            android:id="@+id/ivChecked"
            android:layout_width="@dimen/_24dip"
            android:layout_height="@dimen/_24dip"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_unchecked"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDeliveryAdd" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lato_regular"
            android:text="Pratap nagar area Mansarovar, Jaipur 302020 "
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserName" />

        <TextView
            android:id="@+id/tvUserMobNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lato_regular"
            android:text="fetching mobile no"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/lato_regular"
            android:text="fetching email"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserMobNo" />
<LinearLayout
    android:id="@+id/llDeleteSection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="@dimen/_5dip"
    android:layout_marginBottom="@dimen/_2dip"
    android:layout_marginEnd="@dimen/_5dip"
    app:layout_constraintTop_toBottomOf="@+id/tvUserMobNo">

    <TextView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:drawableLeft="@drawable/icon_delete"
        android:textColor="@color/black"
        android:padding="@dimen/_4dip"
        android:textSize="@dimen/_14sp"
        android:background="@drawable/black_border"
        android:drawablePadding="@dimen/_5dip"/>

    <TextView
        android:id="@+id/ivEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:drawableLeft="@drawable/ic_baseline_edit_24"
        android:textColor="@color/black"
        android:padding="@dimen/_4dip"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/_14sp"
        android:background="@drawable/black_border"
        android:drawablePadding="@dimen/_5dip"/>
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


