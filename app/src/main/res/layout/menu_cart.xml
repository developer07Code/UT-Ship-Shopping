<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:id="@+id/rlCartMain"
    android:paddingEnd="4dp">

    <ImageView
        android:id="@+id/ivCart"
        style="@style/TabNotSelected"
        android:contentDescription="Todo"
        android:tint="@color/black"
        app:srcCompat="@drawable/ic_outline_shopping_cart_24" />

    <TextView
        android:id="@+id/tvNotificationCount"
        android:layout_width="@dimen/_14sp"
        android:layout_height="@dimen/_14sp"
        android:layout_alignEnd="@id/ivCart"
        android:background="@drawable/cirle_shape"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sp"
        android:visibility="gone"
        tools:text="10" />
</RelativeLayout>
